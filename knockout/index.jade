!!! 5
html
	head
		meta(charset="utf-8")
		title lifegamejs
		link(rel="stylesheet", href="css/style.css")
	body
		h1 lifegamejs
		button(data-bind="click: next") Next
		button(data-bind="click: play, enable: !playing()") Play
		button(data-bind="click: stop, enable:  playing()") Stop
		#field(data-bind="template: {name : 'cellTmpl', foreach : field}")
		script(type="text/html", id="cellTmpl")
			.row(data-bind="foreach: $data")
				.cell(data-bind="attr: {class : 'cell ' + $data.status()}, click: $root.reverseCell.bind($data, $data.x, $data.y)")
		script(type="text/javascript", src="js/lib/knockout-2.2.0.js")
		script(type="text/javascript", src="js/lifegame.js")